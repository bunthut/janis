{
        "compilerOptions": {
                "outDir": "./dist/",
                "module": "commonjs",
                "target": "es2020",
                "jsx": "react",
                "allowJs": true,
                "baseUrl": ".",
                "strictNullChecks": true,
                "moduleResolution": "node",
                "esModuleInterop": true,
                "skipLibCheck": true,
                "paths": {
                        "@templates/*": ["./src/*"]
                }
        },
        "include": ["src/**/*"]
}
